/* pages/newmedia/template/newslist.template.wxss */
.padding10{
    padding: 10rpx;
}

.artical-item{
    width: 750rpx;
    height: 420rpx;
    margin-bottom:20rpx;
    overflow: hidden;
}
.artical-item image{
    width: 750rpx;
    height: 420rpx;
    z-index: 1
}
.artical-item .mes{
    bottom: 0rpx;
    padding-bottom: 20rpx;
    width: 100%;
    z-index: 100;
    color: #fff;
    padding: 20rpx;
    background-image:url('http://image.mastergolf.cn/masterapp/title_bk.png');
    background-position: bottom;
    background-repeat: repeat-x;
    
}
.artical-item .mes .channel{
    background: #ff0000;
    font-size: 30rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
} 
.artical-item .mes .title{
    display: block;
    overflow: hidden;
    font-size: 30rpx;
    line-height: 36rpx;
}

.artical-item-type-2{
    background: #545454;
    overflow: hidden;
    flex-direction: row;
}
.artical-item-type-2 .artical-img-box{
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    overflow: hidden;
    margin-top: 100rpx;
    margin-left: 50rpx;
    margin-right: 50rpx;
    float: left;
}
.artical-item-type-2 .mes-type-2{
   float: left;
   font-size: 30rpx;
   width: 400rpx;
   color:#fff;
   flex-direction: column;
   margin-top: 130rpx;
}
.artical-item-type-2 .mes-type-2 .channel{
    background: #ff0000;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
}
